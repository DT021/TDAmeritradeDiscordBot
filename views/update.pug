extends layout

block content
  h1 Update for User ID# : #{user.userid}
  hr
  form(method='POST' action='/update/'+user.userid)
    fieldset
        label(for='serverID') Discord Server ID :
        input#serverID(type='text' value=user.serverID name='serverID')
    fieldset
        label(for='channelID') Discord Channel ID :
        input#channelID(type='text' value=user.channelID name='channelID')
    fieldset
        label(for='userID') Discord User ID :
        input#userID(type='text' value=user.discordTradeUserID name='userID')
    input(type='submit' value='Update')